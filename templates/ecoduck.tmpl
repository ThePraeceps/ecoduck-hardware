# Run the payload loader on boot
enabled=true

# Use advanced payloads (Python)
advanced=false

# Keep running every time it's plugged into a computer
infinite=true

# Wait for device being disconnected before running payload again
wait_for_disconnect=true

# Select gadget based on detected OS
os_gadget_detection=true

# Select payload based on detected OS
os_payload_detection=true

# Default gadget if OS detection fails or is disabled
default_gadget=simple

# Default gadget if OS detection fails, is disabled, or a script is not found for that OS
default_script=default


